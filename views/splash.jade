    != js('application')

    script(src='/js/lib/jquery.dropotron.min.js')
    script(src='/js/lib/jquery.scrollgress.min.js')
    script(src='/js/skel.min.js')
    script(src='/js/util.js')
    script(src='/js/splash.js')

