extends ../layout

block content
  .row
    input#user-search.user-search-box(placeholder="Search a skill here, e.g. cooking")
  input#csrf_token(type='hidden', name='_csrf', value=_csrf)
  .grid.user-list
    each user, i in users
      - var image_uri = user.profile.picture || '/images/person_placeholder.gif'
      .grid-item

        .profile-info
          .header
            .profile-pic(class="#{user.match}" data-long=user.loc.coordinates[0] data-lat=user.loc.coordinates[1] style="background-image:url('#{image_uri}')", data-toggle="popover" data-trigger="hover" title="#{user.profile.name}" data-content="Skills: #{user.skill_labels.join(', ')}" )
            .contact-icons
              include ../partials/newmessage
              .icon-links(data-toggle="modal", data-target="#messageModal", data-name="#{user.profile.name}")
                img.icons(src='/images/chat_bubble.png')
              +message(user)
              .icon-links#second-icon(href='/transactions')
                img.icons(src='/images/request_exchange.png')
          .name-location
            h3=user.profile.name.split(' ')[0]
            h4=user.profile.location
          .skill-icons
            each skill in user.skills
              img.icons(src='/images/skill_icons/' + 'tools.svg')
          p=user.aboutMe

  script(src='/js/showall.js')
  script(src='/js/profile.js')
